<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>{{fullName}} - CV</title>
    <style>
        @page {
            margin: 0;
            size: A4;
        }

        body {
            margin: 0;
            padding: 0;
            font-family: 'Times New Roman', Times, serif;
            background: #fff;
            color: #111;
            line-height: 1.4;
        }

        .container {
            width: 210mm;
            min-height: 297mm;
            margin: 0 auto;
            padding: 50px;
            box-sizing: border-box;
        }

        /* Header */
        header {
            text-align: center;
            border-bottom: 2px solid #000;
            padding-bottom: 20px;
            margin-bottom: 30px;
        }

        h1 {
            font-size: 36px;
            text-transform: uppercase;
            letter-spacing: 2px;
            margin: 0 0 10px 0;
        }

        .subtitle {
            font-size: 16px;
            font-style: italic;
            color: #444;
            margin-bottom: 15px;
        }

        .contact-line {
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: #666;
        }

        .contact-separator {
            margin: 0 10px;
            color: #ccc;
        }

        /* Content */
        .section-title {
            font-size: 14px;
            font-weight: bold;
            text-transform: uppercase;
            border-bottom: 1px solid #ccc;
            margin: 30px 0 15px 0;
            padding-bottom: 5px;
            letter-spacing: 1px;
        }

        .job-entry {
            margin-bottom: 20px;
        }

        .job-header {
            display: flex;
            justify-content: space-between;
            font-family: Arial, sans-serif;
            /* Contrast font for headers */
            margin-bottom: 5px;
        }

        .job-role {
            font-weight: bold;
            font-size: 14px;
        }

        .job-company {
            font-style: italic;
            color: #444;
        }

        .job-date {
            font-size: 12px;
        }

        .job-desc {
            text-align: justify;
            font-size: 13px;
        }

        .skills-list {
            column-count: 2;
            column-gap: 40px;
            font-size: 13px;
        }

        .skill-category {
            font-weight: bold;
            margin-top: 10px;
            display: block;
            text-decoration: underline;
        }

        .profile-summary {
            font-size: 14px;
            text-align: justify;
            margin-bottom: 20px;
            font-style: italic;
        }
    </style>
</head>

<body>
    <div class="container">
        <header>
            <h1>{{fullName}}</h1>
            <div class="subtitle">{{jobTitle}}</div>
            <div class="contact-line">
                {{email}}
                {{#if phone}}<span class="contact-separator">|</span>{{phone}}{{/if}}
                {{#if location}}<span class="contact-separator">|</span>{{location}}{{/if}}
                {{#if linkedin}}<span class="contact-separator">|</span>LinkedIn{{/if}}
            </div>
        </header>

        {{#if professionalSummary}}
        <div class="profile-summary">
            {{professionalSummary}}
        </div>
        {{/if}}

        <div class="section-title">Professional Experience</div>
        {{#each workExperience}}
        <div class="job-entry">
            <div class="job-header">
                <div>
                    <span class="job-role">{{position}}</span>, <span class="job-company">{{company}}</span>
                </div>
                <span class="job-date">{{startDate}} - {{#if endDate}}{{endDate}}{{else}}Present{{/if}}</span>
            </div>
            <div class="job-desc">{{description}}</div>
        </div>
        {{/each}}

        {{#if education}}
        <div class="section-title">Education</div>
        {{#each education}}
        <div class="job-entry">
            <div class="job-header">
                <span class="job-role">{{degree}}</span>
                <span class="job-date">{{startDate}} - {{#if endDate}}{{endDate}}{{else}}Present{{/if}}</span>
            </div>
            <div class="job-company">{{institution}}</div>
        </div>
        {{/each}}
        {{/if}}

        <div class="section-title">Core Competencies</div>
        <div class="skills-list">
            {{#if skillGroups}}
            {{#each skillGroups}}
            <div>
                <span class="skill-category">{{category}}</span>
                {{#each skills}}{{name}}, {{/each}}
            </div>
            {{/each}}
            {{else}}
            {{#each skills}}{{name}}, {{/each}}
            {{/if}}
        </div>

        {{#if projects}}
        <div class="section-title">Key Projects</div>
        {{#each projects}}
        <div class="job-entry" style="margin-bottom: 10px;">
            <strong>{{name}}</strong>: {{description}}
        </div>
        {{/each}}
        {{/if}}
    </div>
</body>

</html>