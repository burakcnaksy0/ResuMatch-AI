<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>CV</title>
    <style>
        body {
            font-family: 'Helvetica', 'Arial', sans-serif;
            color: #334155;
            line-height: 1.5;
            margin: 0;
            padding: 40px;
            max-width: 800px;
            margin: 0 auto;
        }
        h1, h2, h3 {
            color: #1e293b;
            margin-top: 0;
        }
        .header {
            background-color: #0f172a;
            color: white;
            padding: 30px;
            margin: -40px -40px 30px -40px;
        }
        .header h1 {
            color: white;
            margin-bottom: 5px;
            font-size: 28px;
        }
        .header p {
            color: #cbd5e1;
            font-size: 14px;
            margin: 0;
        }
        .section {
            margin-bottom: 25px;
        }
        .section-title {
            font-size: 18px;
            font-weight: bold;
            border-bottom: 1px solid #e2e8f0;
            padding-bottom: 8px;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
        }
        .item {
            margin-bottom: 15px;
            page-break-inside: avoid;
        }
        .item-header {
            display: flex;
            justify-content: space-between;
            margin-bottom: 4px;
        }
        .item-title {
            font-weight: bold;
            font-size: 15px;
        }
        .item-subtitle {
            font-size: 14px;
            font-weight: 500;
        }
        .item-date {
            font-size: 12px;
            color: #64748b;
            background-color: #f1f5f9;
            padding: 2px 6px;
            border-radius: 4px;
        }
        .item-meta {
            font-size: 12px;
            color: #64748b;
            margin-bottom: 6px;
        }
        .description {
            font-size: 13px;
            color: #475569;
        }
        ul {
            margin: 5px 0 0 18px;
            padding: 0;
        }
        li {
            font-size: 12px;
            color: #475569;
            margin-bottom: 2px;
        }
        .skills-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
        }
        .skill-category {
            font-size: 13px;
            font-weight: bold;
            margin-bottom: 5px;
        }
        .skill-tag {
            display: inline-block;
            font-size: 11px;
            background-color: #f1f5f9;
            border: 1px solid #e2e8f0;
            padding: 2px 6px;
            border-radius: 4px;
            margin-right: 4px;
            margin-bottom: 4px;
        }
        .projects-grid {
            display: grid;
            grid-template-columns: 1fr;
            gap: 15px;
        }
        .project-card {
            background-color: #f8fafc;
            border: 1px solid #e2e8f0;
            padding: 12px;
            border-radius: 6px;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>{{fullName}}</h1>
        <p>{{jobTitle}} Application for {{company}}</p>
        <p style="font-size: 11px; margin-top: 10px; color: #94a3b8;">Generated on {{generationDate}}</p>
    </div>

    <!-- Professional Summary -->
    <div class="section">
        <div class="section-title">Professional Summary</div>
        <p class="description">{{professionalSummary}}</p>
    </div>

    <!-- Work Experience -->
    <div class="section">
        <div class="section-title">Work Experience</div>
        {{#each workExperience}}
        <div class="item">
            <div class="item-header">
                <span class="item-title">{{position}}</span>
                <span class="item-date">{{startDate}} - {{#if endDate}}{{endDate}}{{else}}Present{{/if}}</span>
            </div>
            <div class="item-meta">
                {{company}} {{#if location}}â€¢ {{location}}{{/if}}
            </div>
            <p class="description">{{description}}</p>
            {{#if achievements}}
            <ul>
                {{#each achievements}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
            {{/if}}
        </div>
        {{/each}}
    </div>

    <!-- Skills -->
    <div class="section">
        <div class="section-title">Technical Skills</div>
        <div class="skills-grid">
            {{#each skills}}
            <div>
                <div class="skill-category">{{category}}</div>
                <div>
                    {{#each items}}
                    <span class="skill-tag">{{name}}</span>
                    {{/each}}
                </div>
            </div>
            {{/each}}
        </div>
    </div>

    <!-- Education -->
    <div class="section">
        <div class="section-title">Education</div>
        {{#each education}}
        <div class="item">
            <div class="item-header">
                <span class="item-title">{{institution}}</span>
                <span class="item-date">{{startDate}} - {{#if endDate}}{{endDate}}{{else}}Present{{/if}}</span>
            </div>
            <div class="item-meta">{{degree}} in {{fieldOfStudy}}</div>
            {{#if description}}
            <p class="description">{{description}}</p>
            {{/if}}
        </div>
        {{/each}}
    </div>

    <!-- Projects -->
    {{#if projects}}
    <div class="section">
        <div class="section-title">Projects</div>
        <div class="projects-grid">
            {{#each projects}}
            <div class="project-card">
                <div class="item-header">
                    <span class="item-title">{{name}}</span>
                    {{#if url}}
                    <span class="item-date" style="background: none; padding: 0;"><a href="{{url}}" style="color: #2563eb; text-decoration: none;">Link</a></span>
                    {{/if}}
                </div>
                <p class="description">{{description}}</p>
                <div style="margin-top: 5px;">
                    {{#each technologies}}
                    <span class="skill-tag" style="background-color: white;">{{this}}</span>
                    {{/each}}
                </div>
            </div>
            {{/each}}
        </div>
    </div>
    {{/if}}
</body>
</html>
