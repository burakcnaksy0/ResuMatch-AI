<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>{{fullName}} - CV</title>
    <style>
        @page {
            margin: 0;
            size: A4;
        }

        body {
            margin: 0;
            padding: 0;
            font-family: 'Open Sans', Arial, sans-serif;
            background: #fff;
            color: #222;
        }

        .container {
            width: 210mm;
            min-height: 297mm;
            margin: 0 auto;
            padding: 60px;
            box-sizing: border-box;
        }

        /* Header */
        .header {
            margin-bottom: 50px;
            display: flex;
            justify-content: space-between;
            align-items: flex-end;
        }

        h1 {
            font-size: 38px;
            font-weight: 300;
            margin: 0;
            color: #000;
            letter-spacing: -0.5px;
        }

        .job-title {
            font-size: 16px;
            text-transform: uppercase;
            letter-spacing: 2px;
            margin-top: 5px;
            color: #666;
        }

        .contact {
            text-align: right;
            font-size: 11px;
            line-height: 1.6;
            color: #666;
        }

        /* Content */
        .section {
            margin-bottom: 40px;
        }

        .section-header {
            font-size: 12px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            margin-bottom: 20px;
            color: #999;
        }

        .entry {
            margin-bottom: 25px;
        }

        .entry-top {
            display: flex;
            justify-content: space-between;
            margin-bottom: 5px;
            align-items: baseline;
        }

        .role {
            font-size: 16px;
            font-weight: 600;
            color: #000;
        }

        .company {
            font-weight: 400;
            color: #444;
        }

        .date {
            font-size: 12px;
            color: #888;
        }

        .desc {
            font-size: 13px;
            line-height: 1.8;
            color: #444;
            max-width: 95%;
        }

        .skills-grid {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }

        .skill-item {
            font-size: 12px;
            border: 1px solid #ddd;
            padding: 4px 10px;
            border-radius: 2px;
            color: #444;
        }

        .summary {
            font-size: 15px;
            line-height: 1.8;
            color: #333;
            margin-bottom: 40px;
        }

        a {
            color: #000;
            text-decoration: none;
            border-bottom: 1px dotted #999;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="header">
            <div>
                <h1>{{fullName}}</h1>
                <div class="job-title">{{jobTitle}}</div>
            </div>
            <div class="contact">
                <div>{{email}}</div>
                {{#if phone}}<div>{{phone}}</div>{{/if}}
                {{#if location}}<div>{{location}}</div>{{/if}}
                {{#if linkedin}}<div>linkedin.com/in/{{linkedin}}</div>{{/if}}
            </div>
        </div>

        {{#if professionalSummary}}
        <div class="summary">
            {{professionalSummary}}
        </div>
        {{/if}}

        {{#if workExperience}}
        <div class="section">
            <div class="section-header">Experience</div>
            {{#each workExperience}}
            <div class="entry">
                <div class="entry-top">
                    <div>
                        <span class="role">{{position}}</span>
                        <span class="company"> â€” {{company}}</span>
                    </div>
                    <span class="date">{{startDate}} - {{#if endDate}}{{endDate}}{{else}}Present{{/if}}</span>
                </div>
                <div class="desc">{{description}}</div>
            </div>
            {{/each}}
        </div>
        {{/if}}

        {{#if projects}}
        <div class="section">
            <div class="section-header">Selected Projects</div>
            {{#each projects}}
            <div class="entry">
                <div class="entry-top">
                    <span class="role">{{name}}</span>
                </div>
                <div class="desc">{{description}}</div>
            </div>
            {{/each}}
        </div>
        {{/if}}

        {{#if education}}
        <div class="section">
            <div class="section-header">Education</div>
            {{#each education}}
            <div class="entry">
                <div class="entry-top">
                    <span class="role">{{degree}}</span>
                    <span class="date">{{startDate}} - {{#if endDate}}{{endDate}}{{else}}Present{{/if}}</span>
                </div>
                <div class="company">{{institution}}</div>
            </div>
            {{/each}}
        </div>
        {{/if}}

        <div class="section">
            <div class="section-header">Skills</div>
            <div class="skills-grid">
                {{#if skillGroups}}
                {{#each skillGroups}}
                {{#each skills}}
                <span class="skill-item">{{name}}</span>
                {{/each}}
                {{/each}}
                {{else}}
                {{#each skills}}
                <span class="skill-item">{{name}}</span>
                {{/each}}
                {{/if}}
            </div>
        </div>
    </div>
</body>

</html>