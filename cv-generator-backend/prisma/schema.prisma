// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}


model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  
  googleId           String?   @unique @map("google_id")
  resetToken         String?   @map("reset_token")
  resetTokenExpiry   DateTime? @map("reset_token_expiry")
  
  emailVerified          Boolean   @default(false) @map("email_verified")
  verificationCode       String?   @map("verification_code")
  verificationCodeExpiry DateTime? @map("verification_code_expiry")
  lastCodeSentAt         DateTime? @map("last_code_sent_at")

  profile      Profile?
  jobPostings  JobPosting[]
  generatedCVs GeneratedCV[]

  @@map("users")
}

model Profile {
  id                  String   @id @default(uuid())
  userId              String   @unique @map("user_id")
  fullName            String?  @map("full_name")
  phone               String?
  location            String?
  linkedinUrl         String?  @map("linkedin_url")
  githubUrl           String?  @map("github_url")
  portfolioUrl        String?  @map("portfolio_url")
  professionalSummary String?  @map("professional_summary") @db.Text
  profilePictureUrl   String?  @map("profile_picture_url")
  createdAt           DateTime @default(now()) @map("created_at")
  updatedAt           DateTime @updatedAt @map("updated_at")

  user           User @relation(fields: [userId], references: [id], onDelete: Cascade)

  education      Education[]
  workExperience WorkExperience[]
  skills         Skill[]
  projects       Project[]
  certifications Certification[]
  languages      Language[]
  generatedCVs   GeneratedCV[]

  @@map("profiles")
}

model Education {
  id           String    @id @default(uuid())
  profileId    String    @map("profile_id")
  institution  String
  degree       String
  fieldOfStudy String?   @map("field_of_study")
  startDate    DateTime  @map("start_date") @db.Date
  endDate      DateTime? @map("end_date") @db.Date
  gpa          Float?
  description  String?   @db.Text
  createdAt    DateTime  @default(now()) @map("created_at")

  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@map("education")
}

model WorkExperience {
  id           String    @id @default(uuid())
  profileId    String    @map("profile_id")
  company      String
  position     String
  location     String?
  startDate    DateTime  @map("start_date") @db.Date
  endDate      DateTime? @map("end_date") @db.Date
  description  String?   @db.Text
  achievements Json?     @db.JsonB
  createdAt    DateTime  @default(now()) @map("created_at")

  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@map("work_experience")
}

model Skill {
  id               String   @id @default(uuid())
  profileId        String   @map("profile_id")
  name             String
  category         String?
  proficiencyLevel String?  @map("proficiency_level")
  createdAt        DateTime @default(now()) @map("created_at")

  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@map("skills")
}

model Project {
  id           String    @id @default(uuid())
  profileId    String    @map("profile_id")
  name         String
  description  String?   @db.Text
  technologies Json?     @db.JsonB
  url          String?
  githubUrl    String?   @map("github_url")
  startDate    DateTime? @map("start_date") @db.Date
  endDate      DateTime? @map("end_date") @db.Date
  createdAt    DateTime  @default(now()) @map("created_at")

  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@map("projects")
}

model Certification {
  id            String    @id @default(uuid())
  profileId     String    @map("profile_id")
  name          String
  issuer        String
  issueDate     DateTime  @map("issue_date") @db.Date
  expiryDate    DateTime? @map("expiry_date") @db.Date
  credentialId  String?   @map("credential_id")
  credentialUrl String?   @map("credential_url")
  createdAt     DateTime  @default(now()) @map("created_at")

  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@map("certifications")
}

model Language {
  id          String   @id @default(uuid())
  profileId   String   @map("profile_id")
  name        String
  proficiency String?
  createdAt   DateTime @default(now()) @map("created_at")

  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@map("languages")
}

model JobPosting {
  id              String   @id @default(uuid())
  userId          String   @map("user_id")
  jobTitle        String   @map("job_title")
  company         String?
  jobUrl          String?  @map("job_url")
  jobDescription  String   @map("job_description") @db.Text
  requiredSkills  Json?    @map("required_skills") @db.JsonB
  experienceLevel String?  @map("experience_level")
  keywords        Json?    @db.JsonB
  createdAt       DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  generatedCVs GeneratedCV[]

  @@map("job_postings")
}

model GeneratedCV {
  id               String   @id @default(uuid())
  userId           String   @map("user_id")
  profileId        String   @map("profile_id")
  jobPostingId     String?   @map("job_posting_id")
  generatedContent Json?    @map("generated_content") @db.JsonB
  pdfUrl           String?  @map("pdf_url")
  pdfStoragePath   String?  @map("pdf_storage_path")
  generationStatus     String   @default("pending") @map("generation_status")
  aiModelUsed          String?  @map("ai_model_used")
  includeProfilePicture Boolean @default(false) @map("include_profile_picture")
  createdAt            DateTime @default(now()) @map("created_at")

  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  profile    Profile    @relation(fields: [profileId], references: [id], onDelete: Cascade)
  jobPosting JobPosting? @relation(fields: [jobPostingId], references: [id], onDelete: Cascade)

  cvSpecificPhotoUrl   String?  @map("cv_specific_photo_url")
  professionalSummary  String?  @map("professional_summary") @db.Text
  tone                 String?
  templateName         String?  @default("modern") @map("template_name")

  @@map("generated_cvs")
}

